@model QuizMvc.ViewModels.TakeQuizViewModels
@{
    ViewBag.Title = Model.Title;
}

<div class="container" style="margin-top: 40px;">
    <h2>@Model.Title</h2>

    <form asp-action="Submit" asp-controller="Quiz" method="post">
        <!-- Hidden quiz ID -->
        <input asp-for="QuizId" type="hidden" />

        @for (int i = 0; i < Model.Question.Count; i++)
        {
            var question = Model.Question[i];
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>Question @(i + 1):</strong> @question.Text
                </div>
                <div class="panel-body">
                    <div class="radio">
                        <label>
                            <input type="radio" name="Question[@i].SelectedAnswer" value="A" /> @question.OptionA
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="Question[@i].SelectedAnswer" value="B" /> @question.OptionB
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="Question[@i].SelectedAnswer" value="C" /> @question.OptionC
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="Question[@i].SelectedAnswer" value="D" /> @question.OptionD
                        </label>
                    </div>
                </div>
            </div>
        }

        <button type="submit" class="btn btn-success btn-lg">Submit Quiz</button>
    </form>
</div>
