@model List<Quizzes>

@{
    ViewData["Title"] = "Available Quizzes";
}

<h2 class="text-center">Available Quizzes</h2>
<hr />

@if (!Model.Any())
{
    <p class="text-center text-muted" style="font-size: 18px; margin-top: 50px;">
        There are no quizzes yet. Please create one!
    </p>
}
else
{
    <div class="row">
        @foreach (var quiz in Model)
        {
            <div class="col-sm-4">
                <div class="panel panel-default">
                    @if (!string.IsNullOrEmpty(quiz.Image))
                    {
                        <div class="panel-heading" style="padding:0;">
                            <img src="@quiz.Image" class="img-responsive" style="width:100%; height:180px; object-fit:cover;" />
                        </div>
                    }
                    <div class="panel-body">
                        <h4>@quiz.Title</h4>
                        <p class="text-muted">@quiz.Description</p>
                        <a asp-controller="Quiz" asp-action="Details" asp-route-id="@quiz.QuizId" class="btn btn-primary btn-block">
                            Play Quiz
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
