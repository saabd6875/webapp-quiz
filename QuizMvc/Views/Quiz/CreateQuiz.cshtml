@model QuizMvc.ViewModels.CreateQuizViewModels

@{
    ViewData["Title"] = "Create New Quiz";
}

<div class="container">
    <h2 class="text-center">Create New Quiz</h2>
    <hr />

    <form asp-action="CreateQuiz" method="post" enctype="multipart/form-data" class="form-horizontal">
        <!-- Quiz Title -->
        <div class="form-group">
            <label class="control-label col-md-2">Title</label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" placeholder="Enter your quiz title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <!-- Quiz Description -->
        <div class="form-group">
            <label class="control-label col-md-2">Description</label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your quiz"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <!-- Quiz Image -->
        <div class="form-group">
            <label class="control-label col-md-2">Quiz Image (optional)</label>
            <div class="col-md-10">
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>

        <hr />
        <h4>Questions</h4>

        <div id="questions-container">
            <!-- First question -->
            <div class="panel panel-default question-block">
                <div class="panel-heading">
                    <strong>Question 1</strong>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label col-md-2">Text</label>
                        <div class="col-md-10">
                            <input name="Questions[0].Text" class="form-control" placeholder="Type your question..." />
                        </div>
                    </div>
                    <!-- Questions image -->
                    <div class="form-group">
                        <label class="control-label col-md-2">Optional: Add photo</label>
                        <div class="col-md-10">
                            <input name="Questions[0].Image" type="file" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <input name="Questions[0].OptionA" class="form-control" placeholder="Option A" />
                        </div>
                        <div class="col-md-6">
                            <input name="Questions[0].OptionB" class="form-control" placeholder="Option B" />
                        </div>
                        <div class="col-md-6">
                            <input name="Questions[0].OptionC" class="form-control" placeholder="Option C" />
                        </div>
                        <div class="col-md-6">
                            <input name="Questions[0].OptionD" class="form-control" placeholder="Option D" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Correct Option</label>
                        <div class="col-md-10">
                            <select name="Questions[0].CorrectOption" class="form-control">
                                <option value="">Select correct answer</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Legg til spørsmål + submit -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" id="add-question" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> Add Question
                </button>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-ok"></span> Create Quiz
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            var maxQuestions = 10;
 
            $('#add-question').click(function () {
                var container = $('#questions-container');
                var index = container.children('.question-block').length;

                if (index >= maxQuestions) {
                    alert("You can only add up to 10 questions.");
                    return;
                }

                var newHtml =
                    '<div class="panel panel-default question-block">' +
                        '<div class="panel-heading"><strong>Question ' + (index + 1) + '</strong></div>' +
                        '<div class="panel-body">' +
                            '<div class="form-group">' +
                                '<label class="control-label col-md-2">Text</label>' +
                                '<div class="col-md-10">' +
                                    '<input name="Questions[' + index + '].Text" class="form-control" placeholder="Type your question..." />' +
                                '</div>' +
                            '</div>' +
                            '<div class="form-group">' +
                                '<label class="control-label col-md-2">Optional: Add photo</label>' +
                                '<div class="col-md-10">' +
                                    '<input name="Questions[' + index + '].Image" type="file" class="form-control" />' +
                                '</div>' +
                            '</div>' +
                            '<div class="form-group">' +
                                '<div class="col-md-6"><input name="Questions[' + index + '].OptionA" class="form-control" placeholder="Option A" /></div>' +
                                '<div class="col-md-6"><input name="Questions[' + index + '].OptionB" class="form-control" placeholder="Option B" /></div>' +
                                '<div class="col-md-6"><input name="Questions[' + index + '].OptionC" class="form-control" placeholder="Option C" /></div>' +
                                '<div class="col-md-6"><input name="Questions[' + index + '].OptionD" class="form-control" placeholder="Option D" /></div>' +
                            '</div>' +
                            '<div class="form-group">' +
                                '<label class="control-label col-md-2">Correct Option</label>' +
                                '<div class="col-md-10">' +
                                    '<select name="Questions[' + index + '].CorrectOption" class="form-control">' +
                                        '<option value="">Select correct answer</option>' +
                                        '<option value="A">A</option>' +
                                        '<option value="B">B</option>' +
                                        '<option value="C">C</option>' +
                                        '<option value="D">D</option>' +
                                    '</select>' +
                                '</div>' +
                            '</div>' +
                        '</div>' +
                    '</div>';

                container.append(newHtml);
            });
        });
    </script>
}
