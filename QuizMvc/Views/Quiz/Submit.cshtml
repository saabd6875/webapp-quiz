@model QuizMvc.ViewModels.SubmitQuizViewModel

<div class="container" style="margin-top:40px;">
    <div class="panel panel-success">
        <div class="panel-heading text-center">
            <h2>@Model.QuizTitle - Result</h2>
        </div>
        <div class="panel-body text-center">
            <h3>Your Score: @Model.Score / @Model.TotalQuestions</h3>
            <hr />
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Start</a>
            <a asp-controller="Quiz" asp-action="ViewQuizzes" class="btn btn-default" style="margin-left:10px;">Take Another Quiz</a>
        </div>
    </div>
</div>
